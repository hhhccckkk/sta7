<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar"
        android:orientation="vertical" >
         <Button
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_bt_seletor"
            android:text="回顾"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:textColor="@color/whilt"
            android:textSize="12sp"
            android:paddingLeft="5dp" />
        <Button
            android:id="@id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@color/whilt"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <Button
            android:id="@id/left_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/toupiao_selector"
            android:text="@string/toupian_text"
            android:textColor="@color/whilt"
            android:textSize="12sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom" >

            <TextView
                android:id="@+id/game_bg"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/game_buttom_bg" >
            </TextView>

            <com.mi.sta7.utils.CenterArrow
                android:id="@+id/rotateView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/game_bg"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/game_t1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/game_buttom2png" />

            <TextView
                android:id="@+id/game_chap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:paddingLeft="1dp"
                android:paddingTop="7dp"
                android:textColor="@color/red" >
            </TextView>

            <TextView
                android:id="@+id/game_haop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:paddingRight="1dp"
                android:paddingTop="7dp"
                android:textColor="@color/green" />

            <TextView
                android:id="@+id/game_red_led"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_above="@+id/game_bg"
                android:layout_alignParentLeft="true"
                android:background="@drawable/game_red2"
                android:textColor="@color/whilt" />

            <LinearLayout
                android:id="@+id/game_linout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/game_bg"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:textColor="@color/whilt" />

            <TextView
                android:id="@+id/game_green_led"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_above="@+id/game_bg"
                android:layout_alignParentRight="true"
                android:background="@drawable/game_green_right2"
                android:textColor="@color/whilt" />

            <LinearLayout
                android:id="@+id/game_linout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/game_bg"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:textColor="@color/whilt" />

            <LinearLayout
                android:id="@+id/game_lay"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/game_title_bg"
                android:orientation="vertical" >

                <TextView
                    android:textColor="@color/whilt"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/center_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center_horizontal" />
                
                      <TextView
                        android:layout_marginBottom="5dp"
              android:paddingLeft="5dp"
              android:paddingRight="5dp"
                android:ellipsize="marquee" 
                android:focusable="true" 
                android:focusableInTouchMode="true"
                 android:marqueeRepeatLimit="marquee_forever" 
                 android:scrollHorizontally="true"
                  android:singleLine="true"
                android:gravity="center"
                android:id="@+id/game_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/whilt"
                android:textSize="14sp"
                android:textStyle="bold" />
                
       <!--
                <com.mi.sta7.ui.TextViews
                    android:ellipsize="marquee" 
                    android:singleLine="true" 
                    android:textColor="@color/whilt"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:id="@+id/center_title1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" >
                </com.mi.sta7.ui.TextViews>
                    -->
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/game_lay"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/png0"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp" />

                    <ImageView
                        android:id="@+id/png1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/png2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/png3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp" />

                    <ImageView
                        android:id="@+id/png4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/png5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/game_bg"
                android:layout_toRightOf="@+id/game_red_led" >

                <Button
                    android:id="@+id/bad_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/game_bd_selector" />

                <Button
                    android:id="@+id/good_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/game_good_selector" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@+id/game_t1"
                android:layout_below="@+id/game_lay" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="25dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/image9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/game_1_bt"
                    android:visibility="gone" />
            </FrameLayout>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>