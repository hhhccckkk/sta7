<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="main_radio_botton">
        <item name="android:gravity">bottom</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/qian_whilt</item>
    </style>

    <style name="webview_bar_style">
        <item name="android:scrollbarThumbVertical">@drawable/listbar</item>
        <item name="android:scrollbarSize">5dp</item>
    </style>

    <style name="list_style">
        <item name="android:scrollbarThumbVertical">@drawable/listbar</item>
        <item name="android:scrollbarSize">3dp</item>
    </style>

    <style name="title_bar">
        <item name="android:textColor">@color/whilt</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

   <style name="dialog" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/help_shape</item>
        <item name="android:backgroundDimEnabled">true</item>
       
    </style>
    
    <style name="sina_time_style" >
        <item name="android:textColor">@color/sina_time_color</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    
    <style name="sina_name_style" >
        <item name="android:textColor">@color/sina_usrname_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/iphone1</item>
        <item name="android:windowExitAnimation">@anim/iphone2</item>
    </style>
 
</resources>